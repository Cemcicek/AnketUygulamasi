@model List<AnketUygulamasiUI.Models.Dtos.ResultSurveyDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content" style="padding: 100px 0px 20px 0px;">
	<div class="container-fluid">
		<h4 class="page-title">Anketler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Anket Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Soru Ekle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th>@item.SurveyID</th>
										<td>@item.SurveyName</td>
										<td>@(item.Status ? "Aktif" : "Pasif")</td>
										<td><a href="/Survey/DeleteSurvey/@item.SurveyID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Survey/UpdateSurvey/@item.SurveyID" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Question/CreateQuestion/@item.SurveyID" class="btn btn-outline-success">Soru Ekle</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
