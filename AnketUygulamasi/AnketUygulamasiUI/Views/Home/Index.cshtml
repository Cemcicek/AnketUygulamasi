@model List<AnketUygulamasiUI.Models.Dtos.ResultSurveyDto>
@{
    ViewData["Title"] = "Anasayfa";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="padding: 100px 0px 20px 0px;">
	<div class="col-md-8">
		<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="/firstslide.jpg" class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item">
					<img src="/secondslide.jpg" class="d-block w-100" alt="...">
				</div>
			</div>
		</div>

		<p style="padding-top: 25px;">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ac tincidunt nisi. 
			Nunc eu varius nisi. Fusce tincidunt congue luctus. Nulla malesuada sem sit amet molestie ultricies. 
			Vestibulum nec justo viverra, hendrerit enim ultricies, ullamcorper magna. Donec feugiat nunc leo, 
			ultrices efficitur diam viverra a. Quisque a diam urna. Integer.</p>

	</div>
	<div class="col-md-4">
		<div class="content">
@* 			<h4 class="page-title">Anketler</h4> *@
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-body">
							<table class="table mt-3">
								<thead>
									<tr>
										<th scope="col">Anketler</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td><a href="/Home/CreateAnswer/@item.SurveyID" style="color: #004d40"><b>@item.SurveyName</b></a></td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


