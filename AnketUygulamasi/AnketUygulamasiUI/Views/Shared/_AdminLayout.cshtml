<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnketUygulamasiUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light nav-top">
            <div class="container-fluid">
                <a class="navbar-brand nav-br1" href="#">Anket Uygulaması | Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Survey">Anketler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Survey/CreateSurvey">Anket Ekle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Question">Sorular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Question/SurveysList">Cevaplar</a>
                        </li>
                    </ul>
                    <div class="d-flex ms-auto">
                        <a class="btn btn-outline-danger" href="/Login/Logout">Çıkış Yap</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script>
        var title = '@Html.Raw(TempData["Title"])';
        var message = '@Html.Raw(TempData["Message"])';
        var icon = '@Html.Raw(TempData["Icon"])';
        if (message != null && message != '') {
            swal.fire(title, message, icon);
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap/popper.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
